@model IEnumerable<TheWorld.NET.Models.Trip>
@{
    // in this area, this the variable is the current page
    ViewBag.Title = "Home Page";
}

<h2>The World</h2>
<p>This will be a fun site soon!</p>

<div class="row">
    <div class="col-md-6 col-xs-8">
        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-success" /></div>

        </form>
    </div>
    <div class="col-md-6 col-xs-4">
        <h2>The Map</h2>
        <ul>
            @foreach (var trip in Model)
            {
                <li>@trip.Name (@trip.Created.ToShortDateString())</li>

            }
        </ul>
    </div>
</div>
